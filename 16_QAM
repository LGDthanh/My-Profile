clear all;
close all;

% Parameters
M = 16; 
k = log2(M); 
EbNoVec = -10:2:10; 
EbNo = 10.^(EbNoVec/10);

d = sqrt(3/(2*(M-1))); 
Es = (M-1)*d^2; 
Eb = Es/k; 
N0 = Eb./EbNo;
berTheory = (1/2)*erfc(sqrt((k*Eb)./N0)); 

% Plot theoretical BER
semilogy(EbNoVec,berTheory,'--+')
xlabel('Eb/No (dB)')
ylabel('Bit Error Rate')
title('16-QAM Theoretical Bit Error Rate')
grid on;
datacursormode on;
